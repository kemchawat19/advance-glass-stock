<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.advance.glass.stock.view.MasterProductViewController"
      spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <!-- 🏷 Header Section with Left Alignment -->
    <HBox spacing="10">
        <Label text="Product Master File" styleClass="text-header"/>
        <Button text="+ New Product" onAction="#handleOpenAddProductDialog" styleClass="add-button"/>
    </HBox>

    <StackPane VBox.vgrow="ALWAYS">
        <VBox alignment="CENTER" spacing="15">
            <!-- Product Table -->
            <TableView fx:id="productTable" prefHeight="300" prefWidth="600"/>

            <!-- 🔘 New Product Input Form Below -->
            <TextField fx:id="productNameField" promptText="Product Name" alignment="CENTER"/>
            <TextField fx:id="productGroupField" promptText="Product Group" alignment="CENTER"/>
            <TextField fx:id="productUnitField" promptText="Product Unit" alignment="CENTER"/>

            <Button text="Add Product" onAction="#handleAddProduct" styleClass="modern-button"/>
            <Button text="Update Product" onAction="#handleUpdateProduct" styleClass="modern-button"/>
            <Button text="Select Product" onAction="#handleSelectProduct" styleClass="modern-button"/>
        </VBox>
    </StackPane>
</VBox>
