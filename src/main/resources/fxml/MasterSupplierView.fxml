<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/23.0.1"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.advance.glass.stock.view.MasterSupplierViewController"
      spacing="10" alignment="CENTER">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>
    <Label fx:id="statusLabel" text="Supplier Master File" styleClass="section-title"/>
    <TextField fx:id="supplierNameField" promptText="Supplier Name"/>
    <TextField fx:id="supplierContactField" promptText="Contact"/>
    <TextField fx:id="supplierAddressField" promptText="Address"/>
    <Button text="Update Supplier" onAction="#handleUpdateSupplier" styleClass="modern-button"/>
</VBox>
