<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns="http://javafx.com/javafx/23.0.1"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.advance.glass.stock.view.MainViewController"
            stylesheets="@/css/style.css">

    <!-- Side Navigation Panel -->
    <left>
        <VBox spacing="10" styleClass="side-nav">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>

            <!-- Assign fx:id instead of onAction -->
            <Button fx:id="stockButton" text="📦 Stock" styleClass="nav-button"/>
            <Button fx:id="receiptEntryButton" text="🧾 Receipt Entry" styleClass="nav-button"/>
            <Button fx:id="requestEntryButton" text="📑 Request Entry" styleClass="nav-button"/>
            <Button fx:id="returnEntryButton" text="🔄 Return Entry" styleClass="nav-button"/>
            <Button fx:id="jobButton" text="💼 Job" styleClass="nav-button"/>
            <Button fx:id="reportButton" text="📊 Report" styleClass="nav-button"/>

            <!-- Master Files as a collapsible sub-menu -->
            <TitledPane fx:id="masterFilesPane" text="📁 Master Files" expanded="false" styleClass="titled-pane">
                <content>
                    <VBox spacing="5">
                        <padding>
                            <Insets top="5" right="5" bottom="5" left="5"/>
                        </padding>
                        <Button fx:id="masterProductButton" text="🎁 Product" styleClass="nav-button-small"/>
                        <Button fx:id="masterCustomerButton" text="👤 Customer" styleClass="nav-button-small"/>
                        <Button fx:id="masterSupplierButton" text="🚚 Supplier" styleClass="nav-button-small"/>
                    </VBox>
                </content>
            </TitledPane>
        </VBox>
    </left>

    <!-- Central Content Pane -->
    <center>
        <StackPane fx:id="contentPane">
            <padding>
                <Insets top="10" right="10" bottom="10" left="10"/>
            </padding>
        </StackPane>
    </center>
</BorderPane>
