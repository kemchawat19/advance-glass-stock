<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" prefWidth="600" prefHeight="500"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="org.advance.glass.stock.view.ReceiptViewController">

    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Receipt Entry Form" style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Header Section -->
    <HBox spacing="20">
        <Label text="Company: AG" />
        <Label text="Type: REC" />
        <Label text="Terminal: 2" />
        <Label text="Receipt No:" />
        <TextField fx:id="entryNumberField" prefWidth="100" editable="false"/>
        <Label text="Date:" />
        <DatePicker fx:id="entryDatePicker" prefWidth="120"/>
    </HBox>

    <!-- Supplier Info -->
    <GridPane hgap="10" vgap="5">
        <Label text="Supplier:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
        <TextField fx:id="supplierNameField" GridPane.columnIndex="1" GridPane.rowIndex="0" prefWidth="200"/>

        <Label text="Supplier's Invoice:" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
        <TextField fx:id="supplierInvoiceField" GridPane.columnIndex="3" GridPane.rowIndex="0" prefWidth="100"/>
    </GridPane>

    <!-- Table for Receipt Details -->
    <TableView fx:id="receiptTable" prefHeight="250" styleClass="table-view">
        <placeholder>
            <Label text="No items added. Please add a product." style="-fx-text-fill: gray;"/>
        </placeholder>
        <columns>
            <TableColumn fx:id="productIdColumn" text="รหัสสินค้า" prefWidth="100"/>
            <TableColumn fx:id="quantityColumn" text="จำนวน" prefWidth="80"/>
            <TableColumn fx:id="unitColumn" text="หน่วย" prefWidth="80"/>
            <TableColumn fx:id="unitPriceColumn" text="ราคาต่อหน่วย" prefWidth="100"/>
            <TableColumn fx:id="amountColumn" text="ราคารวม" prefWidth="100"/>
            <TableColumn fx:id="descriptionColumn" text="รายละเอียด" prefWidth="150"/>
        </columns>
    </TableView>

    <Button text="Add Product" onAction="#handleOpenAddEntryDetailStage"/>
    <Button text="Submit Receipt" fx:id="submitButton" style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
</VBox>
